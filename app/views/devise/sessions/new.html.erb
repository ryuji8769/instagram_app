
<div class="conteiner">
  <div class="login">
    <h2>ログイン</h2>
    <h1>Instagram</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field  :email, autofocus: true, autocomplete: "email" , placeholder: "電話番号、ユーザーネーム、メールアドレス"%>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password" , placeholder: "パスワード" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  </div>

  <div class="actions">
  <p>アカウントをお持ちでないですか？</p>
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>


